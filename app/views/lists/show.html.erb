<div class="container">
  <hr>
  <h1>list#show</h1>
  <h2><%= @list.name %></h2>
  <hr>
  <% @list.photos.each do |photo| %>
    <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
  <% end %>
  <hr>
  <p>
    <%= link_to "Delete",
    list_path(@list),
    data: {turbo_method: :delete, turbo_confirm: "are you sure?"}
    %>
  </p>
  <p><%= link_to "Edit List", edit_list_path %></p>
  <p><%= link_to "back to lists", lists_path %></p>
  <%= link_to "Add bookmark", new_list_bookmark_path(@list) %>

</div>
